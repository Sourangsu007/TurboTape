# Common Config
LLM_PROVIDER_1=gemini
LLM_NAME_1=gemini/gemini-3-flash-preview

LLM_PROVIDER_2=groq
LLM_NAME_2=meta-llama/llama-4-scout-17b-16e-instruct

LLM_PROVIDER_3=groq
LLM_NAME_3=llama-3.3-70b-versatile # Fallback to a common model

# OpenAI
OPENAI_API_KEY=your_openai_key_here

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_key_here

# Gemini
GEMINI_API_KEY=your_gemini_key_here

# Vertex AI
VERTEX_PROJECT=your_project_id
VERTEX_LOCATION=us-central1
# Note: Vertex AI usually uses Application Default Credentials (ADC) or a service account JSON

# Azure OpenAI
AZURE_API_KEY=your_azure_key
AZURE_API_BASE=https://your-resource.openai.azure.com/
AZURE_API_VERSION=2024-02-15-preview

# Ollama
OLLAMA_API_BASE=http://localhost:11434

# Groq
GROQ_API_KEY=your_groq_key_here

# TogetherAI
TOGETHERAI_API_KEY=your_togetherai_key_here

# OpenRouter
OPENROUTER_API_KEY=your_openrouter_key_here

# Twelve Data — free tier: 800 calls/day, 8 calls/minute
# Sign up at https://twelvedata.com/
TWELVE_DATA_API_KEY=your_twelvedata_key_here

# Alpha Vantage — free tier: 25 calls/day
# Sign up at https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alphavantage_key_here

TIINGO_API_KEY=your_tiingo_key_here

# ── Exchange & Fetcher Behaviour ──────────────────────────────────────────────

# Default exchange when no suffix is provided (NSE or BSE)
PREFERRED_EXCHANGE=NSE

# Seconds to wait between provider attempts on failure (float)
PROVIDER_RETRY_DELAY=1.0

# ── HTTP Timeouts & Retry ─────────────────────────────────────────────────────

HTTP_CONNECT_TIMEOUT=10
HTTP_READ_TIMEOUT=60
HTTP_MAX_RETRIES=3
HTTP_BACKOFF=5.0


# ── RSI Parameters ────────────────────────────────────────────────────────────
RSI_LENGTH=14
RSI_SMA_LENGTH=14
RSI_EMA_LENGTH=14

# ── ADX Parameters ────────────────────────────────────────────────────────────
ADX_LENGTH=14
ADX_SMOOTHING=14

# ── Parabolic SAR Parameters ──────────────────────────────────────────────────
PSAR_AF_START=0.02
PSAR_AF_STEP=0.005
PSAR_AF_MAX=0.2

# ── SuperTrend Parameters ─────────────────────────────────────────────────────
SUPERTREND_PERIOD=20
SUPERTREND_MULTIPLIER=2.0

# ── Donchian Channel Parameters ───────────────────────────────────────────────
DONCHIAN_LENGTH=21

# ── OBV Parameters ────────────────────────────────────────────────────────────
OBV_SMA_LENGTH=20

# ── Volume Parameters ─────────────────────────────────────────────────────────
VOLUME_SMA_LENGTH=20

# ── Caching Parameters ────────────────────────────────────────────────────────
CACHE_EXPIRE_CORE_SECONDS=3600
CACHE_EXPIRE_DATA_SECONDS=86400
